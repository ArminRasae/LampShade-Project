@model List<_01_LampShadeQuery.Contracts.ProductCategory.ProductCategoryQueryModel>
@{
}
<!--====================  category area ====================-->
<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row row-10  masonry-category-layout">
                        @foreach (var item in Model)
                        {
                            
                            <div class="col-lg-4 col-sm-6 grid-item">
                                <!--=======  single category item  =======-->
                                <div class="single-category-item">
                                    <div class="single-category-item__image">
                                        <a asp-area="" asp-page="Components/PoductCategory" asp-route-id="@item.Slug">
                                            <img src="@item.Picture" class="img-fluid" title="@item.PictureTitle" alt="@item.PictureAlt" class="img-fluid">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title">@item.Name</h3>
                                        <a asp-page="/PoductCategory" asp-route-id="@item.Slug">
                                            <i class="ion-android-arrow-dropleft-circle"></i> همین حالا بخرید
                                        </a>
                                    </div>
                                </div>
                                <!--=======  End of single category item  =======-->
                            </div>
                        }
                    </div>
                </div>
                <!--=======  End of category wrapper  =======-->
            </div>
        </div>  
    </div>
</div>
<!--====================  End of category area  ====================-->