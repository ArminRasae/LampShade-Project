@model AccountManagement.Application.Contracts.Account.EditAccountCommand

@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">  ویرایش  کاربر : @Model.UserName</h4>
</div>

<form asp-page="./List" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FullName" class="control-label">نام و نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="FullName">
                    <span asp-validation-for="FullName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="UserName" class="control-label">نام کاربری</label>
                    <input type="text" class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="error"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"> شماره تلفن</label>
                    <input class="form-control" asp-for="Phone">
                    <span asp-validation-for="Phone" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label">نقش</label>
                    @*   <select class="form-control" asp-for="RoleId" asp-items='new SelectList(Model.Roles,"Id","Name")'>
                        <option value=""> نقش...</option>
                    </select> *@
                    <select asp-for="RoleId" class="control-label">
                        <option value="1">مدیر سیستم</option>
                        <option value="2"> کاربر سیستم</option>
                    </select>
                    <span asp-validation-for="RoleId" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ProfilePhoto" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="ProfilePhoto" accept="image/*">

                </div>
            </div>
        </div>
        <div class="row">
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>