@page
@model ServiceHost.Areas.Administration.Pages.Discounts.ColleagueDiscounts.ListModel

@{

    // Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت  تخفیفات همکاران";
}

<div class="row">
    <div class="col-sm-12">
        <h2 class="page-title pull-right">@ViewData["title"]</h2>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./List","Create")">  تعریف تخفیف همکاری</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در  تخفیفات همکاران</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">

                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.ProductId"></label>
                        <select class="form-control" asp-for="SearchModel.ProductId" asp-items="Model.ProductsItem">
                            <option value="">انتخاب محصول</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./List">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست  تخفیفات همکاران(@Model.ColleagueDiscountsList.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>شماره محصول</th>
                                    <th>محصول</th>
                                    <th> درصد تخفیف</th>
                                    <th>تاریخ تولید</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ColleagueDiscountsList)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Product</td>
                                        <td>@item.DiscountRate</td>
                                        <td>@item.CreationDate</td>

                                        <td>
                                            <div style="display:flex; width:225px">

                                                <a class="btn btn-warning btn-custom waves-effect waves-light m-b-5" href="#showmodal=@Url.Page("./List", "Edit", new { id = @item.Id })"><i class="fa fa-edit "></i>ویرایش</a>
                                                @if (item.IsRemoved)
                                                {
                                                    <a class="btn btn-success btn-custom waves-effect waves-light m-b-5 " style="margin-inline:5px" asp-route-id="@item.Id" asp-page="./List" asp-page-handler="Restore">فعال سازی </a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-danger btn-custom waves-effect waves-light m-b-5 " style="margin-inline:5px" asp-route-id="@item.Id" asp-page="./List" asp-page-handler="Remove">غیرفعال</a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}